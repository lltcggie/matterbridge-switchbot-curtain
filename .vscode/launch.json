{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run matterbridge",
            "runtimeExecutable": "matterbridge",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Launch via Task (Setcap Safe)",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "preLaunchTask": "debug-matterbridge-process",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}